<%= error_messages_for 'actor' %>

<%= hidden_field_tag 'user_id', if @user then @user.id else '' end %>
<%= hidden_field_tag 'person_id', if @person then @person.id else '' end %>
<div id="a_tabbar" class="dhtmlxTabBar" imgpath="/images/tab_img/" style="width:700px; height:300px;" skinColors="#F8F2EE,#DFC3AE" >
  
  <div id="a1" name="Общие" style="width:600px;height:250px;">
	<table>
	  <tr>
	    <td> <%= 'Login' %> </td>
	    <td> <%= text_field 'user', 'login' %> </td>
	    <td colspan="2">&nbsp;</td>
	  </tr>
	  <tr>
	    <td> <%= 'Пароль' %> </td>
	    <td> <%= password_field 'user', 'password' %> </td>
	    <td> <%= 'Подтверждение пароля' %> </td>
	    <td> <%= password_field 'user', 'password_confirmation' %> </td>
	  </tr>
	  <tr>
	    <td> <%= 'Должность' %> </td>
	    <td> <%= text_field 'person', 'position' %> </td>
	    
	  </tr>
	  <tr>
	    <td> <%= 'Имя' %> </td>
	    <td> <%= text_field 'person', 'first_name' %> </td>
	    <td> <%= 'Фамилия' %> </td>
	    <td> <%= text_field 'person', 'last_name' %> </td>
	  </tr>
	  <tr>
	    
	    <td colspan="2">&nbsp;</td>
	  </tr>
	  <tr>
	    <td> <%= 'Телефон' %> </td>
	    <td> <%= text_field 'person', 'phone' %> </td>
	    <td> <%= 'Моб. телефон' %> </td>
	    <td> <%= text_field 'person', 'mobile' %> </td>
	  </tr>
	  <tr>
	    <td> <%= 'Факс' %> </td>
	    <td> <%= text_field 'person', 'fax' %> </td>
	    <td> <%= 'Email' %> </td>
	    <td> <%= text_field 'person', 'email' %> </td>
	  </tr>
	  <tr>
	    <td> <%= 'Дата рождения' %> </td>
	    <td> <%= text_field 'person', 'birthday' %> </td>
	   
	  </tr>
	  <tr>
	    <td valign="top"> <%= 'Роль' %> </td>
	    <td colspan="2">
	      
	      	<%= check_box_tag 'role_3', '1' %> <%= 'Пользователь' %><br>
	        <%= check_box_tag 'role_2', '1' %> <%= 'Менеджер данных' %>
	      
	    </td>
	  </tr>
	</table>
  </div>


</div>

